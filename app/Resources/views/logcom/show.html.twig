{% extends 'base.html.twig' %}

{% block body %}
    <h1>Logcom</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ logcom.id }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ logcom.subject }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ logcom.content }}</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{% if logcom.visible %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('logcom_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('logcom_edit', { 'id': logcom.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
